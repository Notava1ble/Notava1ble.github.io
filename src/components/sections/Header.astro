---
import { AspectRatio } from "../ui/aspect-ratio";
import { Button, buttonVariants } from "../ui/button";
import { Skeleton } from "../ui/skeleton";

import GitHubIcon from "../../assets/icons/brand-github.svg";
import LinkedInIcon from "../../assets/icons/brand-linkedin.svg";
import { cn } from "@/lib/utils";
---

<header class="w-1/2 mx-auto flex mt-16 gap-4">
  <div class="flex-2 space-y-4">
    <div class="space-y-1">
      <h1 class="font-bold text-4xl">
        Hello, I'm <span class="text-red-400">Visar Mullaj</span>
      </h1>
      <p class="text-muted-foreground text-lg">Web Developer</p>
    </div>
    <p>
      Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum
      hendrerit rhoncus risus ac malesuada. Aenean ultrices turpis ut sagittis
      laoreet.
    </p>
    <div class="flex gap-3">
      <a
        href="https://github.com/Notava1ble"
        target="_blank"
        class={cn(buttonVariants({ variant: "outlineTransparent" }))}
      >
        <GitHubIcon /> GitHub
      </a>
      <a
        href="https://www.linkedin.com/in/visar-mullaj/"
        target="_blank"
        aria-label="LinkedIn"
        class={cn(buttonVariants({ variant: "outlineTransparent" }))}
      >
        <LinkedInIcon />
      </a>
    </div>
  </div>
  <div class="flex-1 text-center space-y-3">
    <AspectRatio ratio={3 / 2}>
      <Skeleton className="w-full h-full rounded-lg" />
    </AspectRatio>
    <p>Currently working on</p>
  </div>
</header>
