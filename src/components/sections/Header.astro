---
import { AspectRatio } from "../ui/aspect-ratio";
import { buttonVariants } from "../ui/button";
import { cn } from "@/lib/utils";

import GitHubIcon from "../../assets/icons/brand-github.svg";
import LinkedInIcon from "../../assets/icons/brand-linkedin.svg";
import currentlyWorkngOn from "@/lib/data/currentlyWorkongOn";
---

<header class="w-1/2 mx-auto flex mt-16 gap-4">
  <div class="flex-2 space-y-4">
    <div class="space-y-1">
      <h1 class="font-bold text-4xl">
        Hello, I'm <span class="text-red-400">Visar Mullaj</span>
      </h1>
      <p class="text-muted-foreground text-lg">Web Developer</p>
    </div>
    <p>
      Self-taught developer with 2+ years of experience focused on building
      meaningful, usable apps, not just aimless projects.
    </p>
    <div class="flex gap-3">
      <a
        href="https://github.com/Notava1ble"
        target="_blank"
        class={cn(buttonVariants({ variant: "outlineTransparent" }))}
      >
        <GitHubIcon /> GitHub
      </a>
      <a
        href="https://www.linkedin.com/in/visar-mullaj/"
        target="_blank"
        aria-label="LinkedIn"
        class={cn(buttonVariants({ variant: "outlineTransparent" }))}
      >
        <LinkedInIcon />
      </a>
    </div>
  </div>
  <div class="flex-1 text-center space-y-3">
    <a href={currentlyWorkngOn.link}>
      <AspectRatio ratio={3 / 2} className="overflow-hidden rounded-lg">
        <img
          class="w-full h-full rounded-lg hover:scale-103 transition-all cursor-pointer"
          src={currentlyWorkngOn.imagePath}
          alt={currentlyWorkngOn.title}
        />
      </AspectRatio>
    </a>
    <div class="flex-center gap-2">
      <p>Currently working on</p>
      <span class="block size-2 rounded-full bg-green-500"> </span>
    </div>
  </div>
</header>
